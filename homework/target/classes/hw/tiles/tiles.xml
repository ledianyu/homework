<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
    
	<!--타일즈 미적용 페이지 -->
	<definition name="empty_layout" template="/WEB-INF/jsp/hw/layouts/emptyLayout.jsp">
		<put-attribute name="content" 	value="" />
	</definition>
	
	<definition name="common/login" extends="empty_layout">
         <put-attribute name="content" value="/WEB-INF/jsp/hw/common/login.jsp" />
     </definition>
     
	<definition name="cmmn/*" extends="empty_layout">
         <put-attribute name="content" value="/WEB-INF/jsp/hw/cmmn/{1}.jsp" />
     </definition>
	
    <!-- 타일즈 적용 -->
	<!--  definition에서 name은 변수처럼 사용할 이름을 지정하고 template은 사용할 jsp를 지정 -->
	<definition name="default_layout" template="/WEB-INF/jsp/hw/layouts/layout.jsp">
		<put-attribute name="content" value=""/>
	</definition>
	
    <!-- extends를 통해 설정했던 타일즈를 상속하고 적용될 viewResolver 경로를 지정 -->
    <!-- 즉 controller에서 "common/main" 라는 view를 호출했을 때, 이 tiles 설정이 적용된다. -->
	<definition name="*/*" extends="default_layout">
    <!-- content부분만 view를 사용하고 나머지 부분(header 등)은 layouts에 속한 파일들을 따른다는 의미 -->
         <put-attribute name="content" value="/WEB-INF/jsp/hw/{1}/{2}.jsp" />
     </definition>
     
     <definition name="*/*/*" extends="default_layout">
         <put-attribute name="content" value="/WEB-INF/jsp/hw/{1}/{2}/{3}.jsp" />
     </definition>
	
</tiles-definitions>