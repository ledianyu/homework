<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hw.sysmng.service.impl.CodeMngMapper">

	<resultMap id="codeMap" type="hw.sysmng.service.CodeVO">
		<result property="code" column="CODE"/>
		<result property="higherCode" column="HIGHER_CODE"/>
		<result property="knane" column="KNANE"/>
		<result property="ename" column="ENAME"/>
		<result property="kdesc" column="KDESC"/>
		<result property="depth" column="DEPTH"/>
		<result property="sort" column="SORT"/>
		<result property="state" column="STATE"/>
		<collection property="code2List" column="higherCode = CODE" javaType="List" ofType="hw.sysmng.service.CodeVO" select="selectCodeList"/>
	</resultMap>
		 
	<select id="selectCodeList" resultMap="codeMap">
		SELECT TC.CODE
			 , TC.HIGHER_CODE
			 , TC.KNANE
			 , TC.ENAME
			 , TC.KDESC
			 , TC.DEPTH
			 , TC.SORTL
			 , TC.STATE
		  FROM T_CODE TC
		<choose>
			<when  test="higherCode != null and !higherCode.equals('')">
		 WHERE TC.HIGHER_CODE = #{higherCode}
			</when>
			<otherwise>
		 WHERE TC.HIGHER_CODE = '-'
			</otherwise>
		</choose>
		<if test="state != null and !state.equals('')">
		   AND TC.STATE = #{state}
		</if>
		 ORDER BY TC.SORT
	</select>

</mapper>